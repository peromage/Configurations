[core]
	autocrlf = input
	quotepath = false
	editor = vim
[color]
	ui = auto
[gui]
	encoding = utf-8
[i18n "commit"]
	encoding = utf-8
[i18n]
	logoutputencoding = utf-8
[diff]
	tool = nvimdiff
[difftool]
	prompt = false
[difftool "nvimdiff"]
    cmd = nvim -d $LOCAL $REMOTE
[merge]
	tool = nvimdiff
[mergetool]
	prompt = false
[mergetool "nvimdiff"]
    cmd = nvim -d $LOCAL $MERGED $REMOTE -c 'wincmd w|wincmd J'
