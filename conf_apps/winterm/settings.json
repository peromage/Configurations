  // Add any keybinding overrides to this array.
  // To unbind a default keybinding, set the command to "unbound"
  "keybindings": [
    // Application-level Keys
    { "command": "closeWindow", "keys": "alt+f4" },
    { "command": "toggleFullscreen", "keys": "alt+enter" },
    { "command": "toggleFullscreen", "keys": "f11" },
    { "command": "openNewTabDropdown", "keys": "alt+shift+t" },
    { "command": "openSettings", "keys": "ctrl+," },
    { "command": "find", "keys": "ctrl+shift+f" },

    // Tab Management
    // "command": "closeTab" is unbound by default.
    //   The closeTab command closes a tab without confirmation, even if it has multiple panes.
    { "command": "newTab", "keys": "alt+t" },
    { "command": { "action": "newTab", "index": 0 }, "keys": "ctrl+shift+1" },
    { "command": { "action": "newTab", "index": 1 }, "keys": "ctrl+shift+2" },
    { "command": { "action": "newTab", "index": 2 }, "keys": "ctrl+shift+3" },
    { "command": { "action": "newTab", "index": 3 }, "keys": "ctrl+shift+4" },
    { "command": { "action": "newTab", "index": 4 }, "keys": "ctrl+shift+5" },
    { "command": { "action": "newTab", "index": 5 }, "keys": "ctrl+shift+6" },
    { "command": { "action": "newTab", "index": 6 }, "keys": "ctrl+shift+7" },
    { "command": { "action": "newTab", "index": 7 }, "keys": "ctrl+shift+8" },
    { "command": { "action": "newTab", "index": 8 }, "keys": "ctrl+shift+9" },
    { "command": "duplicateTab", "keys": "alt+shift+d" },
    { "command": "nextTab", "keys": "alt+]" },
    { "command": "prevTab", "keys": "alt+[" },
    { "command": { "action": "switchToTab", "index": 0 }, "keys": "alt+shift+1" },
    { "command": { "action": "switchToTab", "index": 1 }, "keys": "alt+shift+2" },
    { "command": { "action": "switchToTab", "index": 2 }, "keys": "alt+shift+3" },
    { "command": { "action": "switchToTab", "index": 3 }, "keys": "alt+shift+4" },
    { "command": { "action": "switchToTab", "index": 4 }, "keys": "alt+shift+5" },
    { "command": { "action": "switchToTab", "index": 5 }, "keys": "alt+shift+6" },
    { "command": { "action": "switchToTab", "index": 6 }, "keys": "alt+shift+7" },
    { "command": { "action": "switchToTab", "index": 7 }, "keys": "alt+shift+8" },
    { "command": { "action": "switchToTab", "index": 8 }, "keys": "alt+shift+9" },

    // Pane Management
    { "command": "closePane", "keys": "alt+q" },
    { "command": { "action": "splitPane", "split": "horizontal", "splitMode": "duplicate" }, "keys": "alt+\\" },
    { "command": { "action": "splitPane", "split": "vertical", "splitMode": "duplicate" }, "keys": "alt+shift+\\" },
    { "command": { "action": "resizePane", "direction": "down" }, "keys": "alt+shift+-" },
    { "command": { "action": "resizePane", "direction": "left" }, "keys": "alt+-" },
    { "command": { "action": "resizePane", "direction": "right" }, "keys": "alt+=" },
    { "command": { "action": "resizePane", "direction": "up" }, "keys": "alt+shift+=" },
    { "command": { "action": "moveFocus", "direction": "down" }, "keys": "alt+down" },
    { "command": { "action": "moveFocus", "direction": "left" }, "keys": "alt+left" },
    { "command": { "action": "moveFocus", "direction": "right" }, "keys": "alt+right" },
    { "command": { "action": "moveFocus", "direction": "up" }, "keys": "alt+up" },
    { "command": { "action": "moveFocus", "direction": "down" }, "keys": "alt+j" },
    { "command": { "action": "moveFocus", "direction": "left" }, "keys": "alt+h" },
    { "command": { "action": "moveFocus", "direction": "right" }, "keys": "alt+l" },
    { "command": { "action": "moveFocus", "direction": "up" }, "keys": "alt+k" },

    // Clipboard Integration
    { "command": { "action": "copy", "singleLine": false }, "keys": "ctrl+shift+c" },
    { "command": { "action": "copy", "singleLine": false }, "keys": "ctrl+insert" },
    { "command": "paste", "keys": "ctrl+shift+v" },
    { "command": "paste", "keys": "shift+insert" },

    // Scrollback
    { "command": "scrollDown", "keys": "alt+e" },
    { "command": "scrollDownPage", "keys": "alt+f" },
    { "command": "scrollUp", "keys": "alt+y" },
    { "command": "scrollUpPage", "keys": "alt+b" },

    // Visual Adjustments
    { "command": { "action": "adjustFontSize", "delta": 1 }, "keys": "alt+shift+l" },
    { "command": { "action": "adjustFontSize", "delta": -1 }, "keys": "alt+shift+h" },
    { "command": "resetFontSize", "keys": "alt+shift+j" }
  ]
