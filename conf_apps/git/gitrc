[user]
name = peromage
email = peromage@outlook.com

[core]
autocrlf = input
quotepath = false
editor = vim

[color]
ui = auto
status = auto
branch = auto
diff = auto

[gui]
encoding = utf-8

[i18n "commit"]
encoding = utf-8

[i18n]
logoutputencoding = utf-8

[diff]
tool = nvimdiff

[difftool]
prompt = false

[difftool "nvimdiff"]
cmd = nvim -d $LOCAL $REMOTE

[merge]
tool = nvimdiff

[mergetool]
prompt = false

[mergetool "nvimdiff"]
cmd = nvim -d $LOCAL $MERGED $REMOTE -c 'wincmd w|wincmd J'

[pull]
ff = only

[alias]
ss = status
ll = log --graph --pretty=format:'%C(red)%h%C(reset) %C(green)[%an]%C(reset) - %s %C(blue)(%cd) %C(yellow)%d' --date=relative
la = log --graph --pretty=format:'%C(red)%h%C(reset) %C(green)[%an]%C(reset) - %s %C(blue)(%cd) %C(yellow)%d' --numstat
ltail = log -n 3
br = branch
ch = checkout
ac = !git add -A && git commit -m
